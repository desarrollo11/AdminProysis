
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Clientes</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Cliente</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblClientes" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>

                <th>Nombre</th>
                <th>Contacto</th>
                <th>Telefono</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/cliente.js"></script>
}


